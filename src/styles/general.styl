// Grid ------------------------------------------------------------------------

grid-spacing = 1px
grid-border = grid-spacing solid color-blue-dark
layout-border = grid-spacing solid color-blue

// General styles --------------------------------------------------------------

*
  padding 0
  margin 0
  -webkit-font-smoothing antialiased // autoprefixer does not adds this
  font-smoothing antialiased

body
  background color-background
  color color-text
  font-family fonts-main
  font-size 15px
  font-weight 100

a
  color color-link
  text-decoration none
  border-bottom 1px dashed rgba(color-link, 0.5)

  &:hover
    border-bottom-style solid
    border-bottom-color color-link

shape()
  padding 0 0.5ex
  border-bottom none

  &:hover
    color color-background
    background color-link
    border-bottom none

.shape
  shape()

img,
a img
  border none

h1
  font-weight 100
  font-size 120px
  font-family fonts-heading
  letter-spacing -0.06em

h2
  font-weight 100

.wrapper
  margin auto

tile()
  position relative

  &::before
    content ''
    display block
    padding-top 100%

  > :first-child
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden

.tile
  tile()

.tile-only-mobile
  @media ({small})
    tile()
