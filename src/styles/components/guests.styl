// --

guest-dimension           = 50%
guest-highlight-dimension = 100%

// Styles ----------------------------------------------------------------------

.guests
  display flex
  flex-wrap wrap
  list-style none

  @media ({medium})
    align-items flex-end

.guest
  position relative
  width 50%
  box-sizing border-box
  border-left 1px solid color-background
  border-bottom @border-left
  background darken(color-background, 60%)

  &:first-of-type
    width 100%

    @media ({medium})
      width 66.66%

      &:hover
        .guest-image
          filter brightness(115%)

      .guest-image
        transition filter 0.2s ease

    .guest-overlay
      transform translateY(0)

    .guest-info
      right 30px
      bottom @right
      padding 0
      background none

    .guest-name
      display inline-block
      padding 6px 10px
      font-size 38px
      font-family fonts-heading
      background color-orange

      @media ({medium})
        padding 10px 15px
        font-size 66px

    .guest-professional-info
      display inline-block
      padding 0 10px
      font-size 15px
      line-height 200%
      font-family fonts-main
      background color-blue
      color color-yellow-light

      @media ({medium})
        padding 0 15px
        line-height 260%

    .guest-company
      font-family fonts-heading-italic

  @media ({small})
    &:first-child,
    &:nth-child(2n)
      border-left none

  @media ({medium})
    width 33.33%

.guest-link
  display block
  border-bottom none

  &:hover
    border-bottom none

.guest-image
  width 100%
  height 100%

.guest-overlay
  position absolute
  left 0
  top 0
  width 100%
  height 100%

.guest-info
  position absolute
  right 0
  bottom 0
  box-sizing border-box
  padding 6px 10px
  text-align right
  color white
  background color-link

  @media ({medium})
    .guest:nth-child(n+2) & // all but not first guest
      display flex
      align-items center
      justify-items flex-end
      right auto
      bottom auto
      width 100%
      height 100%
      padding 0
      // transform

.guest-name
  // display block
  font-size 20px
  font-family fonts-main
  line-height 110%
  letter-spacing -0.06em

  @media ({medium})
    .guest:nth-child(n+2) & // all but not first guest
      margin 0 30px 0 20px
      font-size 42px


.guest-professional-info
  display none

// Animations ------------------------------------------------------------------

@keyframes moveinfromleft
  0%
    transform translateX(-100%)
  100%
    transform translateX(0)

@keyframes moveoutfromleft
  0%
    transform translateX(0)
  100%
    transform translateX(-100%)

@keyframes moveinfromright
  0%
    transform translateX(+100%)
  100%
    transform translateX(0)

@keyframes moveoutfromright
  0%
    transform translateX(0)
  100%
    transform translateX(+100%)

@keyframes moveinfromtop
  0%
    transform translateY(-100%)
  100%
    transform translateY(0)

@keyframes moveoutfromtop
  0%
    transform translateY(0)
  100%
    transform translateY(-100%)

@keyframes moveinfrombottom
  0%
    transform translateY(+100%)
  100%
    transform translateY(0)

@keyframes moveoutfrombottom
  0%
    transform translateY(0)
  100%
    transform translateY(+100%)

