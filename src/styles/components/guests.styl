// --

guest-dimension           = 50%
guest-highlight-dimension = 100%

// Styles ----------------------------------------------------------------------

.guests
  display flex
  flex-wrap wrap
  list-style none

  @media ({medium})
    align-items flex-end

.guest
  position relative
  width 50%
  box-sizing border-box
  border-left 1px solid color-background
  border-bottom @border-left
  background darken(color-background, 60%)

  @media ({medium})
    width 33.33%

  &:first-of-type
    width 100%

    @media ({medium})
      width 66.66%

  &:first-child,
  &:nth-child(2n)
    @media ({small})
      border-left none

.guest-link
  display block
  border-bottom none

  &:hover
    border-bottom none

.guest-image
  width 100%
  height 100%

  .guest:first-of-type & // first guest
    transition filter 0.2s ease

  .guest:first-of-type:hover &
    filter brightness(115%)

.guest-overlay
  position absolute
  left 0
  top 0
  width 100%
  height 100%

  .guest:first-of-type & // first guest
    transform translateY(0)

  .guest:nth-child(n+2) & // all but not first guest
    @media ({medium})
      transform translateX(100%)

.guest-info
  position absolute
  right 0
  bottom 0
  text-align right
  color white

  .guest:first-of-type & // first guest
    right 20px
    bottom @right

    @media ({medium})
      right 30px
      bottom @right

  .guest:nth-child(n+2) & // all but not first guest
    @media ({medium})
      display flex
      align-items center
      justify-content flex-end
      right auto
      bottom auto
      width 100%
      height 100%
      padding 0

.guest-name
  padding 6px 10px
  font-size 18px
  font-family fonts-main
  line-height 110%
  letter-spacing -0.06em
  background color-link

  .guest:first-of-type & // first guest
    display inline-block
    padding 6px 10px
    font-size 36px
    font-family fonts-heading
    background color-orange

    @media ({medium})
      padding 10px 15px
      font-size 50px

  .guest:nth-child(n+2) & // all but not first guest
    @media ({medium})
      margin 0 30px 0 20px
      font-size 42px

.guest-professional-info
  display none

  .guest:first-of-type & // first guest
    display inline-block
    padding 0 10px
    font-size 15px
    line-height 200%
    font-family fonts-main
    background color-blue
    color color-yellow-light

    @media ({medium})
      padding 0 15px
      line-height 260%

.guest-company
  font-family fonts-heading-italic

// Animations ------------------------------------------------------------------

@keyframes moveinfromleft
  0%
    transform translateX(-100%)
  100%
    transform translateX(0)

@keyframes moveoutfromleft
  0%
    transform translateX(0)
  100%
    transform translateX(-100%)

@keyframes moveinfromright
  0%
    transform translateX(+100%)
  100%
    transform translateX(0)

@keyframes moveoutfromright
  0%
    transform translateX(0)
  100%
    transform translateX(+100%)

@keyframes moveinfromtop
  0%
    transform translateY(-100%)
  100%
    transform translateY(0)

@keyframes moveoutfromtop
  0%
    transform translateY(0)
  100%
    transform translateY(-100%)

@keyframes moveinfrombottom
  0%
    transform translateY(+100%)
  100%
    transform translateY(0)

@keyframes moveoutfrombottom
  0%
    transform translateY(0)
  100%
    transform translateY(+100%)

.move-in-from-left
  .guest-overlay
    animation moveinfromleft 0.2s ease-in-out forwards

.move-out-from-left
  .guest-overlay
    animation moveoutfromleft 0.2s ease-in-out forwards

.move-in-from-right
  .guest-overlay
    animation moveinfromright 0.2s ease-in-out forwards

.move-out-from-right
  .guest-overlay
    animation moveoutfromright 0.2s ease-in-out forwards

.move-in-from-top
  .guest-overlay
    animation moveinfromtop 0.2s ease-in-out forwards

.move-out-from-top
  .guest-overlay
    animation moveoutfromtop 0.2s ease-in-out forwards

.move-in-from-bottom
  .guest-overlay
    animation moveinfrombottom 0.2s ease-in-out forwards

.move-out-from-bottom
  .guest-overlay
    animation moveoutfrombottom 0.2s ease-in-out forwards
