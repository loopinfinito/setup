// --

guest-dimension           = 50%
guest-highlight-dimension = 100%

// Styles ----------------------------------------------------------------------

.guests
  display flex
  flex-wrap wrap
  list-style none

  @media ({medium})
    align-items flex-end

.guest
  position relative
  box-sizing border-box
  background darken(color-background, 60%)

.guest-link
  display block
  border-bottom none

  &:hover
    border-bottom none

.guest-image
  width 100%
  height 100%
  transition filter 0.2s ease

  .guest:hover &
    filter brightness(115%)

.guest-info
  position absolute
  right 0
  bottom 0
  text-align right
  color white

.guest-name
  padding 6px 10px
  font-size 18px
  font-family fonts-main
  line-height 110%
  letter-spacing -0.06em
  background color-link

  @media ({medium})
    font-size 22px

  .guest:first-of-type & // first guest
    display inline-block
    padding 10px
    font-size 40px
    font-family fonts-heading
    background color-orange

    @media ({medium})
      padding 10px 15px
      font-size 56px

.guest-professional-info
  display none

  .guest:first-of-type & // first guest
    display inline-block
    padding 0 10px
    font-size 15px
    line-height 200%
    font-family fonts-main
    background color-blue
    color color-yellow-light

    @media ({medium})
      padding 0 15px
      line-height 260%

.guest-company
  font-family fonts-heading-italic
