// --

guest-dimension           = 50%
guest-highlight-dimension = 100%

// Styles ----------------------------------------------------------------------

.guests
  display flex
  flex-wrap wrap
  list-style none

  @media ({medium})
    align-items flex-end

.guest
  position relative
  width 50%
  box-sizing border-box
  border-left 1px solid color-background
  border-bottom @border-left
  background darken(color-background, 60%)

  @media ({medium})
    width 33.33%

  &:first-of-type
    width 100%

    @media ({medium})
      width 66.66%

  &:first-child,
  &:nth-child(2n)
    @media ({small})
      border-left none

.guest-link
  display block
  border-bottom none

  &:hover
    border-bottom none

.guest-image
  width 100%
  height 100%

  .guest:first-of-type & // first guest
    transition filter 0.2s ease

  .guest:first-of-type:hover &
    filter brightness(115%)

.guest-info
  position absolute
  right 0
  bottom 0
  text-align right
  color white

  .guest:first-of-type & // first guest
    right 20px
    bottom @right

    @media ({medium})
      right 30px
      bottom @right

.guest-name
  padding 6px 10px
  font-size 18px
  font-family fonts-main
  line-height 110%
  letter-spacing -0.06em
  background color-link

  @media ({medium})
    font-size 26px

  .guest:first-of-type & // first guest
    display inline-block
    padding 6px 10px
    font-size 36px
    font-family fonts-heading
    background color-orange

    @media ({medium})
      padding 10px 15px
      font-size 50px

.guest-professional-info
  display none

  .guest:first-of-type & // first guest
    display inline-block
    padding 0 10px
    font-size 15px
    line-height 200%
    font-family fonts-main
    background color-blue
    color color-yellow-light

    @media ({medium})
      padding 0 15px
      line-height 260%

.guest-company
  font-family fonts-heading-italic
