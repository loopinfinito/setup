content-padding = 30px

.content
  padding content-padding content-padding 0 content-padding

.text
  font-size 16px

  h2
    font-size 22px
    font-family fonts-main
    line-height 130%
    color color-highlight

  p,
  blockquote
    margin 20px 0
    font-family fonts-text
    line-height 150%

    + h2
      margin-top 40px

  strong
    font-family fonts-text-bold
    font-weight normal
    color color-orange

  blockquote
    font-style italic

    footer
      margin-top 10px
      text-align right

    cite
      font-style normal

  figure
    position relative
    left - content-padding
    width calc(100% + 60px)
    margin content-padding 0

    @media ({medium})
      left -45px
      width calc(100% + 45px)

    img
      width 100%

  figcaption
    margin 10px content-padding 0px content-padding
    line-height 130%
    font-size 14px
    font-style italic
    font-family fonts-text
    text-align center

.video-fit
  position relative
  left - content-padding
  width calc(100% + 60px)
  height 0
  margin content-padding 0
  overflow hidden

  @media ({medium})
    left 0
    width calc(100% + 45px)

  .interview-section:nth-child(even) &
    @media ({medium})
      left -45px

  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%

.video-ratio-16-9
  padding-bottom calc((100% + 60px) * 9 / 16)

  @media ({medium})
    padding-bottom calc((100% + 45px) * 9 / 16)
